<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetPlaceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/set_place_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0E3CC"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/set_place_backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="장소 설정"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="장소 이름"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/corner_round"
                android:backgroundTint="@color/gainsboro"
                android:elevation="4dp"
                android:hint="장소 이름을 입력하세요"
                android:inputType="text"
                android:maxLength="30"
                android:paddingStart="15dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="장소 주소"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/corner_round"
                android:backgroundTint="@color/gainsboro"
                android:textColor="#FF888888"
                android:gravity="center_vertical"
                android:text="주소를 찾고 있어요..."
                android:paddingLeft="12dp"
                android:textSize="18dp"
                android:elevation="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="카테고리"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_round"
                android:backgroundTint="@color/gainsboro"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_trash_bin"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/corner_round"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/trash_bin"
                            android:tint="#00000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="쓰레기통" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_vending_machine"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="15dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vending_machine"
                            android:tint="#af000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자판기" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_fish"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fish"
                            android:tint="#af000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="붕어빵" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_clothes_donation"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/clothes_donation"
                            android:tint="#af000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="의류 수거함" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_pull_up_bar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="15dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pull_up_bar"
                            android:tint="#af000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="철봉" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/category_cigar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cigar"
                            android:tint="#af000000"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="흡연장" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="장소 사진"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/set_place_setImageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent"
                    android:elevation="4dp"
                    android:src="@drawable/plus_button" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/corner_round"
                android:backgroundTint="@color/gainsboro"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text_pic_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="사진을 업로드하세요!"
                    android:textSize="17sp"/>

                <ImageView
                    android:id="@+id/set_place_showImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:text="평점"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/corner_round"
                android:backgroundTint="@color/gainsboro"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/star_score1"
                    android:layout_marginHorizontal="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:src="@drawable/star_light"/>
                <ImageButton
                    android:id="@+id/star_score2"
                    android:layout_marginHorizontal="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:src="@drawable/star_light"/>
                <ImageButton
                    android:id="@+id/star_score3"
                    android:layout_marginHorizontal="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:src="@drawable/star_light"/>
                <ImageButton
                    android:id="@+id/star_score4"
                    android:layout_marginHorizontal="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:src="@drawable/star_light"/>
                <ImageButton
                    android:id="@+id/star_score5"
                    android:layout_marginHorizontal="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent"
                    android:src="@drawable/star_light"/>

            </LinearLayout>

            <Button
                android:id="@+id/set_place_setBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                android:layout_marginTop="12dp"
                android:text="장소 등록하기"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>